         </div>
        </div>
    </div>
</div>

</div>



<script>

//responsive mobile homepage view
var x = window.matchMedia("(max-width: 500px)")
myFunction(x) // Call listener function at run time
x.addListener(myFunction) // Attach listener function on state changes

function myFunction(x) {
    var modalcontent = document.getElementsByClassName("modalcontent");
    var superSection = document.getElementsByClassName("superSection");
    var section = document.getElementsByClassName("section");
    var inp = document.getElementsByClassName("inp");
    var field = document.getElementsByClassName("field");
    var h1 = document.getElementsByTagName("h1");
    var h2 = document.getElementsByTagName("h2");
    var h3 = document.getElementsByTagName("h3");
    var p = document.getElementsByTagName("p");
    if (x.matches) { // If media query matches
        var i;
        for (i = 0; i < modalcontent.length; i++) {
            modalcontent[i].style.width = "80%";
            modalcontent[i].style.alignItems = "center";
        }
        for (i = 0; i < superSection.length; i++) {
            superSection[i].style.flexDirection = "column";
            superSection[i].style.justifyContent = "center";
            superSection[i].style.width = "100%";
        }
        for (i = 0; i < section.length; i++) {
            section[i].style.flexDirection = "column";
            section[i].style.justifyContent = "center";
            section[i].style.alignSelf = "center";
            section[i].style.width = "100%";
            section[i].style.margin = "0px 0px 31px 0px";
            section[i].style.flexWrap = "nowrap";
        }
        for (i = 0; i < field.length; i++) {
            field[i].style.flexDirection = "column";
        }
        for (i = 0; i < inp.length; i++) {
            inp[i].style.width = "70%";
        }
        for (i = 0; i < modalcontent.length; i++) {
            modalcontent[i].style.width = "column";
            modalcontent[i].style.alignItems = "center";
        }
        for (i = 0; i < h1.length; i++) {
            h1[i].style.fontSize = "17px";
            h1[i].style.textAlign = "center";
        }
        for (i = 0; i < h2.length; i++) {
            h2[i].style.fontSize = "13px";
        }
        for (i = 0; i < h3.length; i++) {
            h3[i].style.fontSize = "13px";
            h3[i].style.textAlign = "center";
        }
        for (i = 0; i < p.length; i++) {
            p[i].style.fontSize = "11px";
        }
    }

    else {
        var i;
        for (i = 0; i < modalcontent.length; i++) {
            modalcontent[i].style.width = "90%";
        }
        for (i = 0; i < superSection.length; i++) {
            superSection[i].style.flexDirection = "row";
            superSection[i].style.justifyContent = "flex-start";
            superSection[i].style.width = "80%";
        }
        for (i = 0; i < section.length; i++) {
            section[i].style.justifyContent = "flex-start";
            section[i].style.flexDirection = "row";
            section[i].style.flexWrap = "wrap";
            section[i].style.width = "50%";
            section[i].style.margin = "31px 31px 15px 31px";
        }
        for (i = 0; i < field.length; i++) {
            field[i].style.flexDirection = "row";
        }
        for (i = 0; i < inp.length; i++) {
            inp[i].style.width = "150px";
        }
        for (i = 0; i < modalcontent.length; i++) {
            modalcontent[i].style.width = "70%";
        }
        for (i = 0; i < h1.length; i++) {
            h1[i].style.fontSize = "17px";
            h1[i].style.textAlign = "center";
        }
        for (i = 0; i < h2.length; i++) {
            h2[i].style.fontSize = "17px";
        }
        for (i = 0; i < h3.length; i++) {
            h3[i].style.fontSize = "17px";
        }
        for (i = 0; i < p.length; i++) {
            p[i].style.fontSize = "13px";
        }
    }
}




    //********* BUILDING MODALS JAVASCRIPT FUNCTIONALITY! ***********//



//gets all the close buttons
var exit = document.getElementById("close");

//function to make building modals appear when clicked; takes specified modal & building svg
function dropModal(modal) {
    //series of if statements to change body bg color depending on modal selected
        bgColor("#c2acac");

    //display modal & enlarge specified building svg
    document.getElementById(modal).style.display = "block";


    
        //following function restores bg color to white, shows building links, hides modal, & scales building svg back down
        exit.onclick = function() {
            bgColor("white");
            document.getElementById(modal).style.display = "none";
        }
    }


function bgColor(color) {
    document.body.style.backgroundColor = color;
}




//toggle duty and desk info
function show(item) {
    var reveal = document.getElementById(item);
    if (reveal.style.display === "block") {
        reveal.style.display = "none";
    }
    else {
        reveal.style.display = "block";
    }
}
    
    </script>
</body>
</html>
