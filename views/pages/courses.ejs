<body>
    
    <div class="coursesMain">
        <div class="titleText coursesTitle">Courses</div>
        <a class = "return" href="/"> << back </a>
        <form class="coursesForm" name="filterOptions" action="/courses" onsubmit="return validateForm()" method="GET">
            <h4>[subject]</h4>
            <select name="subject" id="subjectBox"></select><br>

            <span><h4>[min hours] <input type="number" name="minhours" value="0" step="1" max="20" min="0"></h4></span><br>
            <span><h4>[max hours] <input type="number" name="maxhours" value="20" step="1" max="20" min="0"></h4></span><br>

            <span><h4>[honors?] <input type="checkbox" name="honors" value="true"></h4></span><br>
            <span><h4>[lab?] <input type="checkbox" name="lab" value="true"></h4></span><br>
            <span><h4>[drill?] <input type="checkbox" name="drill" value="true"></h4></span><br>
            <span><h4>[variable credit?] <input type="checkbox" name="variable" value="true"></h4></span><br>

            <h4>[level]</h4>
            <select name="level">
                <option value="">Any level</option>
                <option value="freshman">Freshman (1000)</option>
                <option value="sophomore">Sophomore (2000)</option>
                <option value="junior">Junior (3000)</option>
                <option value="senior">Senior (4000)</option>
                <option value="graduate">Graduate (5000+)</option>
                <option value="other">Other</option>
            </select><br><br>

           <input  type="submit" value="Search">
        </form>
        
    </div>
    <div class="coursesTable animated slideInUp slow">
        <table style="width:100%">
            <tr>
                <th><h3 style="margin: 10px;">Course Code</h3></th>
                <th><h3>Course Name</h3></th>
                <th><h3>Credit Hours</h3></th>
                <th><h3>Description</h3></th>
            </tr>
            <% results.forEach(function(r) { %>
            <tr>
                <% if (r.minhours == r.maxhours) {%>
                <td style="color:maroon; font-size: 13px; margin: 5px; width:20%;"><%= r.subject %> <%= r.number %></td>
                <td style="color:maroon; font-size: 13px; margin: 5px; width:45%;"><%= r.name %></td>
                <td style="color:maroon; font-size: 13px; margin: 5px; width:15%;"><%= r.minhours %></td>
                <td class="tooltip"><%= r.description.substring(0, 20) + '...' %>
                    <span class="tooltiptext"><%= r.description %></span>
                </td>
                <%} else {%>
                <td style="color:maroon; font-size: 13px; margin: 5px; width:20%;"><%= r.subject %> <%= r.number %></td>
                <td style="color:maroon; font-size: 13px; margin: 5px; width:45%;"><%= r.name %></td>
                <td style="color:maroon; font-size: 13px; margin: 5px; width:15%;"><%= r.minhours %>-<%= r.maxhours %></td>
                <td class="tooltip" ><%= r.description.substring(0, 20) + '...' %>
                    <span class="tooltiptext"><%= r.description %></span>
                </td>
                <%}%>
                </tr>
            <%}); %>

        </table>
    </div>

</body>

